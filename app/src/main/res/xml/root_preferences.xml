<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditTextPreference
        android:defaultValue="125"
        android:key="textTransparencyKey"
        android:title="@string/textTransparencyString"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:maxLines="1"
        app:useSimpleSummaryProvider="true"/>

    <SwitchPreference
        android:defaultValue="false"
        android:key="greenScreenEffectKey"
        android:title="Use transparency for a specific color \n(e.g., green screen effect)"/>

    <ListPreference
        app:key="greenScreenEffectTargetKey"
        app:title="Apply color transparency to live preview or image"
        app:entries="@array/greenScreenEntries"
        app:entryValues="@array/greenScreenValues"
        app:defaultValue="transparentColorPreview"
        app:useSimpleSummaryProvider="true"/>

