    <ListPreference
        app:defaultValue="center_inside"
        app:entries="@array/scaleTypeEntries"
        app:entryValues="@array/scaleTypeValues"
        app:key="scaleTypeKey"
        app:title="@string/imageScaleTypeString"
        app:useSimpleSummaryProvider="true" />
-->

    <EditTextPreference
        android:defaultValue="0"
        android:key="textRedKey"
        android:title="Enter red value of color for transparency (0-255)"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:maxLines="1"
        app:useSimpleSummaryProvider="true"/>

    <EditTextPreference
        android:defaultValue="0"
        android:key="textGreenKey"
        android:title="Enter green value of color for transparency (0-255)"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:maxLines="1"
        app:useSimpleSummaryProvider="true"/>

    <EditTextPreference
        android:defaultValue="0"
        android:key="textBlueKey"
        android:title="Enter blue value of color for transparency (0-255)"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:maxLines="1"
        app:useSimpleSummaryProvider="true"/>

</PreferenceScreen>